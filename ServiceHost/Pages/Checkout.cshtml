@page
@model ServiceHost.Pages.CheckoutModel
@{
    ViewData["Title"] = "تایید سبد خرید و پرداخت";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">تایید سبد خرید / پرداخت</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li>
                                <a asp-page="./Index">صفحه اصلی</a>
                            </li>
                            <li class="active">تایید سبد خرید / پرداخت</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  page wrapper  =======-->
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <form action="#">
                            <div class="cart-table table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th class="pro-thumbnail">عکس</th>
                                            <th class="pro-title">محصول</th>
                                            <th class="pro-price">قیمت واحد</th>
                                            <th class="pro-quantity">تعداد</th>
                                            <th class="pro-price">مبلغ کل بدون تخفیف</th>
                                            <th class="pro-stock">درصد تخفیف</th>
                                            <th class="pro-price">مبلغ کل تخفیف</th>
                                            <th class="pro-price">مبلغ پس از تخفیف</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Cart.Items)
                                        {
                                            <tr>
                                                <td class="pro-thumbnail">
                                                    <a>
                                                        <img src="~/UploadedFiles/@item.Picture" class="img-fluid" alt="@item.Name">
                                                    </a>
                                                </td>
                                                <td class="pro-title">
                                                    <a>@item.Name</a>
                                                </td>
                                                <td class="pro-price">
                                                    <span>@item.UnitPrice.ToMoney() تومان</span>
                                                </td>
                                                <td class="pro-quantity">
                                                    <span>@item.Count</span>
                                                </td>
                                                <td class="pro-price">
                                                    <span>@item.TotalItemPrice.ToMoney() تومان</span>
                                                </td>
                                                <td class="pro-stock">
                                                    <span>@item.DiscountRate%</span>
                                                </td>
                                                <td class="pro-price">
                                                    <span>@item.DiscountAmount.ToMoney() تومان</span>
                                                </td>
                                                <td class="pro-price">
                                                    <span>@item.PayableAmount.ToMoney() تومان</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </form>

                        <div class="row">
                            <div class="col-lg-6 col-12 d-flex">
                                <div class="cart-summary">
                                    <div class="cart-summary-wrap">
                                        <h4>خلاصه وضعیت فاکتور</h4>
                                        <p>مبلغ نهایی <span>@Model.Cart.TotalAmount.ToMoney() تومان</span></p>
                                        <p>مبلغ تخفیف <span>@Model.Cart.DiscountAmount.ToMoney() تومان</span></p>
                                        <h2>مبلغ قابل پرداخت <span>@Model.Cart.PayableAmount.ToMoney() تومان</span></h2>
                                    </div>
                                    <div class="cart-summary-button">
                                        <button class="checkout-btn">پرداخت</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



